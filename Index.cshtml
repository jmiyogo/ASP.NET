@model IEnumerable<Viddly2.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("New Movie", "New", "Movie",null, new { @class="btn btn-primary"})
</p>
@if (!Model.Any())
{
    <p>We don't have movies yet</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>                    
                    <td>@Html.ActionLink(movie.Name,"Edit", new { id = movie.Id })</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

